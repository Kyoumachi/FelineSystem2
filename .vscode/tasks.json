{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build wasm",
			"type": "shell",
			"command": "em++",
			"args": [
				"src/main.cpp",
				"src/music.cpp",
				"src/utils.cpp",
				"src/hgdecoder.cpp",
				"src/scene.cpp",
				"src/asmodean/hgx2bmp.cpp",
				"-Isrc/include",
				"-Isrc/asmodean/include",
				"-o",
				"index.html",
				"-sUSE_SDL_MIXER=2",
				"-sUSE_SDL=2",
				"-sALLOW_MEMORY_GROWTH",
				"-fdeclspec",
				"-sUSE_ZLIB=1",
				"--preload-file",
				"assets"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": []
		},
		{
			"label": "Build offline",
			"type": "process",
			"command": "g++",
			"args": [
				"src/main.cpp",
				"src/music.cpp",
				"src/hgdecoder.cpp",
				"src/scene.cpp",
				"src/utils.cpp",
				"src/asmodean/hgx2bmp.cpp",
				"-Isrc/include",
				"-Isrc/asmodean/include",
				"-IC:/x86_64-w64-mingw32/include",
				"-LC:/x86_64-w64-mingw32/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_mixer",
				"-lz",
				"-o",
				"a.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"problemMatcher": []
		}
	]
}