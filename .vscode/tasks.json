{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build with emcc",
			"command": "emcc",
			"type": "shell",
			"args": [
				"src\\main.cpp",
				"-o",
				"index.html",
				// "--preload-file assets"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
			}
		}
	]
}